#using org.wbsilva.bx.statemachine2while.*
#using AttrCondDefLibrary.*

#rule event2value #with org.wbsilva.bx.statemachine2while

#source {
	sm: SM{
		++ -events->e
	}
	++ e: Event
}

#target {
	p: Program{
		++ -literals->val
	}
	++ val: Val
}

#correspondence {
	sm2p: SM2P{
		#src->sm
		#trg->p
	}
	++ e2val: E2V{
		#src->e
		#trg->val
	}
}

#attributeConditions {
	eq(e.id, val.id)
}